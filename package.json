{
  "name": "template-typescript-parcel-react",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Template to build React apps using Parcel and optionally alias React to Preact X",
  "author": "Eric Liu (https://github.com/metonym)",
  "scripts": {
    "start": "parcel public/index.html",
    "build": "rimraf dist && parcel build public/index.html --no-source-maps",
    "lint": "tslint --fix -p . -c tslint.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch"
  },
  "dependencies": {
    "linaria": "^1.3.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.22",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "parcel": "^1.12.4",
    "parcel-plugin-linaria": "^0.1.2",
    "posthtml-expressions": "^1.1.1",
    "preact": "^10.0.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript",
      "linaria/babel"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "pre-push": "yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "resolutions": {
    "serialize-to-js": ">=2"
  }
}
