{
  "name": "template-typescript-parcel-react",
  "version": "0.1.2",
  "license": "MIT",
  "description": "Template to build React apps using Parcel and optionally alias React to Preact X",
  "author": "Eric Liu (https://github.com/metonym)",
  "scripts": {
    "start": "parcel public/index.html",
    "build": "rimraf dist && parcel build public/index.html --no-source-maps",
    "test": "jest --coverage",
    "test:tdd": "jest --watch"
  },
  "dependencies": {
    "linaria": "^1.3.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "jest": "^25.1.0",
    "parcel": "^1.12.4",
    "parcel-plugin-linaria": "^0.1.2",
    "posthtml-expressions": "^1.1.1",
    "preact": "^10.3.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript",
      "linaria/babel"
    ]
  }
}
